        <Label Content="Как называется категория?" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="BoxName" Text="{Binding  Path=Name, Mode=TwoWay}"  HorizontalAlignment="Left" Height="23" Margin="35,56,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="395"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="35,84,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="BoxDescrition" HorizontalAlignment="Left" Height="61" Margin="35,110,0,0" TextWrapping="Wrap" Text="{Binding  Path=Description, Mode=TwoWay}" VerticalAlignment="Top" Width="395"/>

    </Grid>
</Window>
